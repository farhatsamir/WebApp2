@page
@model final_project.Pages.admin.Carousels.IndexModel


<partial name="sidenav" />


<main id="pgmain">

    <h1>Carousel Section</h1>

    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Carousel[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carousel[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carousel[0].Link)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carousel[0].Photo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carousel[0].active)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carousel[0].Order)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Carousel)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Link)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Photo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.active)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>

