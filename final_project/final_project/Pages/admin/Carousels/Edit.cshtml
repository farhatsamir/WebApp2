@page
@model final_project.Pages.admin.Carousels.EditModel

<partial name="sidenav" />

<main id="pgmain">

    <h1>Edit</h1>

    <h4>Carousel</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Carousel.Id" />
                <div class="form-group">
                    <label asp-for="Carousel.Description" class="control-label"></label>
                    <input asp-for="Carousel.Description" class="form-control" />
                    <span asp-validation-for="Carousel.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Carousel.Title" class="control-label"></label>
                    <input asp-for="Carousel.Title" class="form-control" />
                    <span asp-validation-for="Carousel.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Carousel.Link" class="control-label"></label>
                    <input asp-for="Carousel.Link" class="form-control" />
                    <span asp-validation-for="Carousel.Link" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Carousel.Photo" class="control-label"></label>
                    <input asp-for="Carousel.Photo" class="form-control" />
                    <span asp-validation-for="Carousel.Photo" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Carousel.active" /> @Html.DisplayNameFor(model => model.Carousel.active)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Carousel.Order" class="control-label"></label>
                    <input asp-for="Carousel.Order" class="form-control" />
                    <span asp-validation-for="Carousel.Order" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</main>