<script>
    var url = window.location.href;
    if (url.includes("Sections"))
        document.getElementById("item0").classList.add("current");
    else if (url.includes("Carousels"))
        document.getElementById("item1").classList.add("current");
    else if (url.includes("Services"))
        document.getElementById("item2").classList.add("current");
    else if (url.includes("Portfolioes"))
        document.getElementById("item3").classList.add("current");
    else if (url.includes("Products"))
        document.getElementById("item4").classList.add("current");
    else if (url.includes("Messages"))
        document.getElementById("item5").classList.add("current");
</script>