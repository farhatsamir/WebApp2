        <div id="pguser">
            <img src="~/img/admin/icon.png" />
            <i class="txt">MY ADMIN</i>
        </div>
    </a>

    <a id="item1" class="nav-item  " asp-area="" asp-page="/admin/Carousels/Index">
        <i class="ico">&#9733;</i>
        <i class="txt">Carousel</i>
    </a>

    <a id="item2" class="nav-item " asp-area="" asp-page="/admin/Services/Index">
        <i class="ico">&#9728;</i>
        <i class="txt">Services</i>
    </a>

    <a id="item3" class="nav-item " asp-area="" asp-page="/admin/Portfolioes/Index">
        <i class="ico">&#9728;</i>
        <i class="txt">Portfolioes</i>
    </a>

    <a id="item4" class="nav-item " asp-area="" asp-page="/admin/Products/Index">
